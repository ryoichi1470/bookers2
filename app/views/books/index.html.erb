 <% if @book.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@book.errors.count, "error") %>found</h2>
          <ul>
           <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
          </ul>
     </div>
<% end %>





<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <%= render 'layouts/side', user: @user, book: @book %>
	  </div>
	  <div class="col-md-8 offset-md-1">
	      <h2>Books</h2>
	      <table class='table table-hover table-inverse'>
	        <thead>
	          <tr>
	            <th></th>
	            <th>Title</th>
	            <th>Opinion</th>
	            <th colspan="3"></th>
	          </tr>
	        </thead>
	        <tbody>
	          <% @books.each do |b| %>
	            <tr>
	              <td>
	              	<%= link_to user_path(b.user.id) do %>
	                  <%= image_tag(b.user.profile_image) if b.user.profile_image.attached? %>
	                <% end %>
	              </td>
	              <td><%= link_to b.title, book_path(b) %></td>
	              <td><%= b.body %></td>
	            </tr>
	          <% end %>
	        </tbody>
	      </table>
	  </div>
	</div>
</div>