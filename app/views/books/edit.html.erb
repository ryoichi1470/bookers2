<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing Book</h1>
            <%= form_with model: @book do |f| %>
              <% if @book.errors.any? %>
                <div class="error_messages">
                  <h2><%= pluralize(@book.errors.count, "error") %>found</h2>
                  <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-group">
                <label for="inputTitle">Title</label>
                <br>
                <%= f.text_field :title, autofocus: true, id: "inputTitle", placeholder: "タイトル" %>
              </div>
              <div class="form-group">
                <label for="inputbody">Opinion</label>
                <%= f.text_area :body, id: "inputbody", class: "form-control", placeholder: "内容" %>
              </div>
              <div class="form-group">
                <%= f.submit "Update Book", class: "btn btn-success" %>
              </div>
            <% end %>
            <%= link_to "Show", book_path(@book) %>
            |
            <%= link_to "Back", books_path %>
        </div>
    </div>
</div>
