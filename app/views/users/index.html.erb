<div class='container px-5 px-sm-0'>
    <div class='row'>
        <div class='col-md-3'>
             <%= render 'layouts/side', user: @user, book: @book %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
            <table class='table table-hover table-inverse'>
              <thead>
	            <tr>
	              <th>Image</th>
	              <th>name</th>
	              <th></th>
	              <th colspan="3"></th>
	            </tr>
	          </thead>
	          <tbody>
	            <% @users.each do |u| %>
	              <tr>
	                <td>
	                  <%= link_to user_path(u.id) do %>
	                    <%= image_tag(u.profile_image) if u.profile_image.attached? %>
	                  <% end %>
	                </td>
	                <td><%= u.name %></td>
	                <td><%= link_to 'Show', user_path(u) %></td>
	              </tr>
	            <% end %>
	          </tbody>
            </table>
        </div>
    </div>
</div>
