<div class="container">
  <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
          <%= form_with model: @user do |f| %>
            <% if @user.errors.any? %>
              <div class="error_messages">
                <h2><%= pluralize(@user.errors.count, "error") %>found</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <label for="inputName">Name</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>
            <div class="form-group">
              <label for="inputImage">ProfileImage</label>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
            <div class="form-group">
              <label for="inputIntroduction">Introduction</label>
              <%= f.text_area :introduction, id: "inputIntroduction", class: "form-control", placeholder: "自己紹介文" %>
            </div> 
            <div class="form-group">
              <%= f.submit "Update User", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
    </div>
</div>

